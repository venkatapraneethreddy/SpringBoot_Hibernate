        {
          "name": "Create Project in Company",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": "http://localhost:8080/projects?companyId=1",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"AI Platform\",\n  \"employeeIds\": []\n}"
            }
          }
        },
        {
          "name": "Assign Employee to Project",
          "request": {
            "method": "POST",
